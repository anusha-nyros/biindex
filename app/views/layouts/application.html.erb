    clear:both;
    padding-bottom:4px;
    padding-right:4px;
  }
	#footer {
		position:absolute;
		bottom:0;
		width:100%;
		height:40px;			/* Height of the footer */
		background:#000;
    color:#fff;
	}
	
	</style> 
      <style type="text/css">
  
	
 	 html,body {
            height: 100%;
        }
        footer {
            color: #fff;
            background: #222;
            padding: 5px;
            border-top: 1px solid #000;
            font-size:12px;
        }
        
        .wrapper {
            min-height: 100%;
            height: auto !important;
            height: 100%;
            margin: 0px auto 10px;
        }
        .push {
            height: 63px;
        }
        .wrapper > .container {
            padding-top: 10px;
        }
   	.contact a:hover{
	text-decoration :none;
	}
  </style>
	<!--[if lt IE 7]>
	<style media="screen" type="text/css">
	#container {
		height:100%;
